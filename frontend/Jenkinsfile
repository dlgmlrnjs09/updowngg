pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/dlgmlrnjs09/updowngg'
            }
        }

        stage('Build') {
            steps {
                sh '''
                    echo "Current directory: $(pwd)"
                    echo "Files in directory:"
                    ls -la
                    echo "Environment file content:"
                    cat /home/ubuntu/frontend/.env.production
                    echo "Starting build..."
                    chmod +x /home/ubuntu/frontend/node_modules/vite/bin/vite.js
                    rm -rf /home/ubuntu/frontend/node_modules
                    rm /home/ubuntu/frontend/package-lock.json
                    cd /home/ubuntu/frontend && npm install @rollup/rollup-linux-x64-gnu --save-optional
                    cd /home/ubuntu/frontend && npm run build
                '''
            }
        }

        stage('Deploy') {
            steps {
                dir('frontend') {
                    sh '''
                        echo "Current directory:"
                        pwd
                        echo "Env file content:"
                        cat .env.production
                        sudo cp -r dist/* /usr/share/nginx/html/
                        sudo systemctl restart nginx
                    '''
                }
            }
        }
    }
}