pipeline {
    agent any

    environment {
        JASYPT_PASSWORD = credentials('JASYPT_PASSWORD')
        GRADLE_OPTS = '-Dorg.gradle.jvmargs=-Xmx512m -XX:MaxMetaspaceSize=256m -Dfile.encoding=UTF-8'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/dlgmlrnjs09/updowngg'
            }
        }

        stage('Build') {
            steps {
                dir('backend') {
                    sh '''
                        export JAVA_HOME=/usr/lib/jvm/java-17-amazon-corretto.x86_64
                        export PATH=$JAVA_HOME/bin:$PATH
                        chmod +x ./gradlew
                        ./gradlew clean build -x test --no-daemon --no-parallel
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('backend') {
                    sh '''
                        pid=$(ps -ef | grep java | grep jar | awk '{print $2}')
                        if [ ! -z "$pid" ]; then
                            kill -9 $pid
                        fi

                        nohup java -jar \
                            -Xmx256m \
                            -Dspring.profiles.active=prd \
                            -DJASYPT_PASSWORD=${JASYPT_PASSWORD} \
                            build/libs/backend-0.0.1-SNAPSHOT.jar &
                    '''
                }
            }
        }
    }
}